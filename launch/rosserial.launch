<launch>
    <arg name="device" default="/dev/serial/by-id/usb-Silicon_Labs_CP2102_USB_to_UART_Bridge_Controller_0012-if00-port0"/>
    <arg name="baud" default="115200"/>

    <node pkg="rosserial_python" type="serial_node.py" name="serial_node" output="log" respawn="true" respawn_delay="10">
        <param name="port" value="$(arg device)"/>
        <param name="baud" value="$(arg baud)"/>
    </node>
</launch>